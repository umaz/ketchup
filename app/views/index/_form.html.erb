<%= form_for @project do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :kana %>
  <%= f.text_field :kana %>
  <%= f.label :about %>
  <%= f.text_field :about %>
  <%= f.label :detail %>
  <%= f.text_area :detail %>
  <%= f.label :kind %>
  <%= f.select :kind, {"主食" => "主食", "軽食" => "軽食", "スイーツ" => "スイーツ", "ドリンク" => "ドリンク", "販売" => "販売", "展示" => "展示", "参加型" => "参加型", "ステージ" => "ステージ", "パフォーマンス" => "パフォーマンス", "その他" => "その他"} %>
  <%= f.submit data: {confirm: "更新します。"}, :disable_with=> '送信中'%>
<% end %>
