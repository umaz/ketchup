<%= favicon_link_tag('favicon.ico') %>

<header>
  <div class="title">
  <p>筑波大学用語辞典</p>
  <h1><%= link_to index_path, :class => "top" do %>
        <%= image_tag 'favicon.ico' %>&nbsp;KeTchUp
      <% end %></h1>
  <h2>明日のために調べよう!</h2>
</div>
</header>
<div id="word_area" class="center">
  <div id="word" class="fadein">
    <%= link_to project_path(@project.id) do %>
      <%= @project.name %>
    <% end %>
  </div>
</div>
<%= search_form_for @q do |f| %>
<div class="form-group">
  <div class="input-group">
    <%= f.text_field :name, :class => "form-control" %>
    <span class="input-group-btn">
      <%= button_tag( class: "btn btn-primary btn-lg", value: "search") do %>
        <%= content_tag :span, "検索", class: "glyphicon glyphicon-search" %>
      <% end %>
    </span>
  </div>
</div>
<% end %>

<div class="center fav-new">
  <%= link_to "お気に入り一覧", index_fav_list_path, :class => "btn btn-warning" %>
  <%= link_to '新規登録', new_project_path, :class => "btn btn-info" %>
</div>


