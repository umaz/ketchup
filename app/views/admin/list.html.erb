<header>
  <div class="title">
  <p>筑波大学用語辞典</p>
</div>
</header>

<h1><%= image_tag 'favicon.ico' , :width => '45', :height => '45'%>&nbsp;検索結果一覧</h1>
<table class="table table-striped">
  <tr>
    <th>用語名</th>
    <th>概要</th>
    <th>カテゴリー</th>
  </tr>
  <% @projects.each do |project| %>
  <tr>
    <td><%= link_to project.name, detail_admin_path(project.id) %></td>
    <td><%= link_to project.about, detail_admin_path(project.id) %></td>
    <td><%= link_to project.kind, detail_admin_path(project.id) %></td>
  </tr>
  <% end %>
</table>
<%= link_to 'トップ', admin_index_path %>
<%= stylesheet_link_tag "list", :media=> "all" %>
