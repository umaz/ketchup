<%= form_for @project do |f| %>
<div class="form-group">
  <div class="input-group">
    <%= f.label '名前' %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="input-group">
    <%= f.label 'フリガナ' %>
    <%= f.text_field :kana, :class => "form-control" %>
  </div>
  <div class="input-group">
    <%= f.label '概要' %>
    <%= f.text_field :about, :class => "form-control" %>
  </div>
  <div class="input-group">
    <%= f.label '詳細' %>
    <%= f.text_area :detail, :class => "form-control" %>
  </div>
  <div class="input-group">
    <%= f.label '大カテゴリー' %>
    <%= f.select :kind1, {"主食" => "主食", "軽食" => "軽食", "スイーツ" => "スイーツ", "ドリンク" => "ドリンク", "販売" => "販売", "展示" => "展示", "参加型" => "参加型", "ステージ" => "ステージ", "パフォーマンス" => "パフォーマンス", "その他" => "その他"}, {}, :class => "form-control" %>
  </div>
  <div class="input-group">
    <%= f.label '小カテゴリー' %>
    <%= f.select :kind1, {"主食" => "主食", "軽食" => "軽食", "スイーツ" => "スイーツ", "ドリンク" => "ドリンク", "販売" => "販売", "展示" => "展示", "参加型" => "参加型", "ステージ" => "ステージ", "パフォーマンス" => "パフォーマンス", "その他" => "その他"}, {}, :class => "form-control" %>
  </div>
  <div class="input-group">
    <%= f.label '同義語、類義語' %>
    <%= f.text_field :synonym, :class => "form-control" %>
  </div>
  <div class="input-group input_sub">
    <%= f.submit '更新', data: {:disable_with => '更新中', confirm: '内容を更新します'}, :class => 'btn btn-primary' %>
  </div>
</div>
<% end %>
<%= stylesheet_link_tag "form", :media => "all" %>
