<h1><%= @project.id %>: <%= @project.name %></h1>
<h2><%= @project.group %></h2>
<p><%= @project.about %></p>
<div class="center">
  <% if @lists.include?(@project.id.to_s) %>
    <%= button_to "<i class='glyphicon glyphicon-star'></i>",
{:action => "fav_remove_in_detail", :data => @project.id}, :remote => false, :class => "btn btn-danger" %>
  <% else %>
  <%= button_to "<i class='glyphicon glyphicon-star'></i>",
{:action => "fav", :data => @project.id}, :remote => false, :class => "btn btn-warning" %>
  <% end %>
    <%= @favorite.count %>
</div>
<%= link_to '一覧', projects_detail_path, :class => "btn btn-primary" %>
<%= link_to 'トップ', projects_index_path, :class => "btn btn-success" %>
