<header>
  <div class="title">
  <p>筑波大学用語辞典</p>
</div>
</header>
<%= @search %>
<h1><%= @project.name %></h1>
<h2><%= @project.about %></h2>
<p><%= simple_format(@project.detail.gsub(/\\n/, "\n")) %></p>
<p><%= @project.kind %></p>
<div id="fav_detail" class="center">
  <% if @lists.include?(@project.id.to_s) %>
    <%= button_to "お気に入り解除", {:action => "fav_remove", :data => @project.id}, :remote => true, :class => "btn btn-danger" %>
  <% else %>
    <%= button_to "お気に入り登録", {:action => "fav", :data => @project.id}, :remote => true, :onClick => "a()", :class => "btn btn-warning" %>
  <% end %>
  <i class='glyphicon glyphicon-star'></i>
  <%= @project.count %>
</div>
<table id="list_fav" class="table table-striped">
  <tr>
    <th>似ているワード</th>
  </tr>
  <% @projects.each do |project| %>
  <tr>
    <td><%= link_to project.name, project_path(project.id) %></td>
  </tr>
  <% end %>
</table>
<%= paginate @projects %>

<%= link_to '戻る', :back, :class => "btn btn-primary" %>
<%= link_to 'トップ', index_path, :class => "btn btn-success" %>

<%= stylesheet_link_tag "detail", :media=> "all" %>
<%= javascript_include_tag "fav" %>
<script>
function a(){
  confirm('お気に入りしました');
}
</script>
